<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/weather_top_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30.0"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/weather_top_temp_unit"
        app:layout_constraintBottom_toTopOf="@id/weather_top_feel_like"/>
    <TextView
        android:id="@+id/weather_top_temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_unit_celsius"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/weather_top_temp_value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/weather_top_feel_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_top_feel_like_template"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/weather_top_temp_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>